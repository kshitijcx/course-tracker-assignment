generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Course {
  id       Int     @id @map("_id")
  name     String
  selected Boolean @default(false)
  progress Int     @default(0)
  score    Int?
}

type ansStr {
  id     Int
  option String
}

model Answer {
  id      Int      @id @map("_id")
  answers ansStr[]
}

type quesStr {
  id       Int
  question String
  answers  String[]
  correct  String
}

model Question {
  id        Int       @id @map("_id")
  questions quesStr[]
}
